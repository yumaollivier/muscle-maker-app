           <div class="input-field">
               <label for="exerciseName" class="input-field__label">Nom de l'exercice</label>
               <input type="text" name="exerciseName" id="exerciseName" class="input-field__input" value="<%= exercise.name %>">
           </div>
            <div class="input-field">
                <p class="input-field__label">Groupe(s) musculaire ciblé(s)</p>
                <div class="group-container">
                    <select name="group" id="group" class="dropdown-btn btn-outlined">
                        <option id="groupChoice" value="aucun">Aucun</option>
                        <option id="groupChoice" value="Pectoraux">Pectoraux</option>
                        <option id="groupChoice" value="Dos">Dos</option>
                        <option id="groupChoice" value="Biceps">Biceps</option>
                        <option id="groupChoice" value="Triceps">Triceps</option>
                        <option id="groupChoice" value="Quadriceps">Quadriceps</option>
                        <option id="groupChoice" value="Ischios">Ischios</option>
                        <option id="groupChoice" value="Épaules">Épaules</option>
                        <option id="groupChoice" value="Avant-bras">Avant-bras</option>
                        <option id="groupChoice" value="Abdos">Abdos</option>
                        <option id="groupChoice" value="Cou">Cou</option>
                    </select>
                    <% if (exercise.muscleTarget.length > 0) { %>
                        <% const musclesTargeted = exercise.muscleTarget.split(' ') %>
                        <% musclesTargeted.forEach(muscle => { %>
                            <div class="group-choice" data-group="<%= muscle %>"><%= muscle %><span class="cross">X</span></div>
                        <% }) %>
                    <% } %>
                </div>
                <input type="hidden" name="muscleTarget" id="muscleTarget" class="input-field__input" value="<%= exercise.muscleTarget %>">
            </div>
            <table class="set-table">
                <tbody>
                    <tr class="set-table__header">
                        <th class="set-table__column">Série</th>
                        <th class="set-table__column">Répétitions</th>
                        <th class="set-table__column">Temps de repos (en s)</th>
                        <th class="set-table__column"></th>
                    </tr>
                    <% if (firstExerciseSetNumber > 1) { %>
                        <% for (let i = 0; i < firstExerciseSetNumber; i++) { %>
                            <tr class="set-table__input-field" id="<%= i + 1 %>">
                                <td class="set"><%= i + 1 %></td>
                                <td class="reps">
                                    <input type="number" class="input-field__input" name="reps" id="reps">
                                </td>
                                <td class="rest">
                                    <input type="number" class="input-field__input" name="rest" id="rest">
                                </td>
                                <% if (i > 0) { %>
                                    <td class="delete red-font bold" id="<%= i + 1 %>">X</td>
                                <% } %>
                            </tr>
                        <% } %>
                    <% } else if(typeof exercise.schema === "object"){ %>
                        <% exercise.schema.forEach((schema, i) => { %>
                            <tr class="set-table__input-field" id="<%= i + 1 %>">
                                <td class="set"><%= schema.set %></td>
                                <td class="reps">
                                    <input type="number" class="input-field__input" name="reps" id="reps" value="<%= schema.reps %>">
                                </td>
                                <td class="rest">
                                    <input type="number" class="input-field__input" name="rest" id="rest" value="<%= schema.rest %>">
                                </td>
                                <% if (i > 0) { %>
                                    <td class="delete red-font bold" id="<%= i + 1 %>">X</td>
                                <% } %>                                
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr class="set-table__input-field" id="1">
                            <td class="set">1</td>
                            <td class="reps">
                                <input type="number" class="input-field__input" name="reps" id="reps">
                            </td>
                            <td class="rest">
                                <input type="number" class="input-field__input" name="rest" id="rest">
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
            <button class="btn btn-fullwidth" id="addSet" type="button">+ Ajouter une série</button>
            <div class="textarea-field">
                <label for="trainingNotes" class="input-field__label">Notes de l'exercice</label>
                <textarea class="textarea-field__textarea bordered" name="trainingNotes" id="trainingNotes" cols="30" rows="10"><%= exercise.notes %></textarea>
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <input type="hidden" name="exerciseSchema" id="exerciseSchema">
            <input type="hidden" name="exerciseId" id="exerciseId" value="<%= exercise.id %>">
            <input type="hidden" name="programId" id="programId" value="<%= programId %>">
            <input type="submit" name="submitAction" class="btn btn-fullwidth btn-outlined mt-1" id="addExercise" value="Lier avec un autre exercice">
            <input type="submit" name="submitAction" class="btn btn-fullwidth mt-1" id="addExercise" value="<% if(pageTitle === 'Modifier un exercice'){ %>Modifier l'exercice<% } else { %>Ajouter l'exercice<% } %>">
        </form>
    </body>
