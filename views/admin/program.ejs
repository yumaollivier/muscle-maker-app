<%- include('../includes/head.ejs') %>
<link href="/css/admin/dashboard.css" rel="stylesheet"/>
<link href="/css/admin/trainings.css" rel="stylesheet"/>
    </head>

    <body>
        <%- include('../includes/banner.ejs', {goBack: true}) %>
        <div class="trainings-container">
            <h1 class="title bebas-font">
                <%= program.name %>
            </h1>
            <% trainings.forEach(training => { %>
                <div class="flag-link shadow-effect">
                    <h1 class="flag-link__title bebas-font"><%= training.name %></h1>
                    <p class="flag-link__details"><%= training.exercises.split(',').length %> exercices</p>
                    <p class="flag-link__details"><%= training.muscleTarget %></p>
                    <!-- <span class="status green-font bebas-font">Termin√©</span> -->
                    <div class="flag-link__buttons">
                        <a class="btn btn-midwidth">Recommencer</a>
                        <a href="/training/<%= training.id %>" class="btn btn-midwidth btn-outlined">Voir</a>
                    </div>
                </div>
            <% }) %>
        </div>
    </body>
<%- include('../includes/end.ejs') %>